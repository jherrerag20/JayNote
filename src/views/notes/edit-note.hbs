<div class="col-md-4 mx-auto">
  <div class="card">
    <div class="card-header text-center">
      <h3>Edit note</h3>
    </div>
    <div class="card-body">
      <form action="/notes/edit/{note._id}"  method="POST">
          <input type="hidden" name="_method" value="PUT"/>
          <div class="form-group">
            <input type="text" name="title" class="form-control" value="{{note.title}}">
          </div>
          <div class="form-group">
            <textarea name="description" class="form-control">{{note.description}}</textarea>
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-block btn-sm bg-dark btn-dark">Save</button>
          </div>
      </form>
    </div>
  </div>
</div>